<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="edu.eci.pdsw.sampleprj.dao.mybatis.mappers.TipoItemMapper">

    
    <resultMap type='TIPOITEM' id='TIPOITEMRESULT'>
        <id property='id' column='id'/>
        <result property='descripcion' column='descripcion'/>
    </resultMap>
        
    <select id="getTiposItem" parameterType="TipoItem" resultMap="TIPOITEMRESULT">
    	SELECT *
			FROM VI_ITEMS where VI_TIPOITEM.id= #{id}
    </select>     
    
    <select id="getTiposItems" parameterType="TipoItem" resultMap="TIPOITEMRESULT">
    	SELECT *
			FROM VI_ITEMS 
    </select> 

    <insert id="addTipoItem" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO VI_ITEMS (descripci√≥n)
        values (#{descripcion})
    </insert>
           
</mapper>
